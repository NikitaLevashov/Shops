@{
    Layout = null;
}

@model List<Shops.Models.Shop>;

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Shops</title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
</head>

<style>
    div {
        width: 30%;
        background: gray;
        padding: 20px;
        -webkit-box-sizing: border-box;
        border-width: 2px;
        border-color: palevioletred;
    }

    tr:hover {
        background: #d5e6a2;
    }
</style>

<body>
    <h3><b>Shops</b></h3>
    <table border="1">
        <tr>
            <td width="100" style="font-weight: bold">Name of shop</td>
            <td width="100" style="font-weight: bold">Operating mode</td>
            <td width="100" style="font-weight: bold">Adress</td>
            <td width="100" style="font-weight: bold"></td>
        </tr>
    </table>

    @{
        var item = 0;
    }

    @for (int i = 0; i <= @Model.Count - 1; i++)
    {
        item = i+1;

        <table border="1">
            <tr>
                <td width="100" >@Model[i].Name</td>
                <td width="100">@Model[i].OperatingMode</td>
                <td width="100">@Model[i].Adress</td>
                <td width="100" style="color: blue; text-decoration: underline"; class="@item">Products</td>
            </tr>
        </table>
    }

    <script>
        for (let i = 0; i <= @Model.Count; i++) { $(document).ready(function () {
            $('.' + i).click(function foo() {
                window.location.href = '/Home/ShowProducts?id=' + i;
            });
        });
    }
    </script>
</body>
</html>
